@import 'variables.styl'
@import 'mixins.styl'

.loader-wrapper
  box-sizing(border-box)
  position(fixed, $header-height 0 0 0)
  background-color white
  padding 10px
  text-align center
  z-index 111111

.loader
  animation-duration(0.75s)
  animation-iteration-count(infinite)
  animation-name(rotate-continuous)
  animation-timing-function(linear)
  size(25px)
  border 5px solid #ccc
  border-right-color transparent
  border-radius (50%)
  display none
  float right
  margin auto
  position absolute
  top 50%
  left 50%


//only display loader is app is loading
.loading
  .loader
    display block
