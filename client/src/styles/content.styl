//styles for the content section (where currencies are displayed)
@import 'variables.styl'
@import 'mixins.styl'
@import 'fonts.styl'

.column
  padding 0

.column.main
  box-sizing(border-box)
  width 100%
  height 90%
  background white

  +for_breakpoint(small)
    height 450px

  +for_breakpoint(small-landscape)
    height 250px

.card
  background white
  border-radius (2px)
  box-shadow rgba(0, 0, 0, 0.02) 0px 2px 1px 2px
  padding 20px
  margin 0px auto 10px auto
  max-width 250px
  +for_breakpoint(small)
  //animate down
    for i in 0..9
      &:nth-child(i)
        opacity 0
        //fadeInDown(0.5s, i / 4 * 1s)
        animation: fadeInDown 0.5s i / 4 * 1s forwards

  @keyframes fadeInDown
    0%
      opacity 0
      transform scale(.5)
    50%
      opacity 1
    100%
      opacity 1
      transform scale(1)


.btn
  box-sizing(border-box)
  background $color-grey
  border 0px
  border-radius (2px)
  box-shadow rgba(0, 0, 0, 0.02) 0px 2px 1px 2px
  padding 8px 10px
  margin 0px 3px 7px 3px
  color white
  text-transform uppercase
  font-size 12px
  font-family 'Lato', Arial, sans-serif

  &:hover
    cursor pointer
    background darken($color-grey, 10%)

  &.primary
    background $color-primary
    &:hover
      background darken($color-primary, 10%)

  &.block
    width 100%
    display block

.lang-wrapper
  float: right
  margin: 14px 140px 0 -180px
  position: relative
  color: #425663
  font-size: 14px
  padding: 1px 6px 1px 10px
  border: 1px solid #ffca34
  border-radius: 4px
  cursor: pointer
  .lang-current
    display block
    padding-right 25px
    &:after
      content '\25BC'
      padding 0px 0px 0px 4px
      border-left 1px solid #ffca34
      color #ffca34
      position absolute
      right 4px
  ul
    display none
    position absolute
    list-style none
    z-index 10
    left -1px
    border 1px solid #ffca34
    top 4px
    border-top none
    background #fff
    padding 8px 0 2px 0
    width 100%
    li
      text-align right
      padding 4px 8px
      border-bottom 1px dotted #FFCA34
      margin 0 4px
      &:last-child
        border-bottom none
  ul.selected
    display block
  &:after
    clear both

  +for_breakpoint(medium)
    margin-right 100px
    margin-left -85px

  +for_breakpoint(small)
    &.desktop
      display none

    &.mobile
      float none
      display inline-block
      margin 0 0px 10px 10px
      .lang-current
        min-width 100px;

/* wrap-report-problem */
.wrap-report-problem
  display inline-block
  width 100%
  text-align center
  .report-problem
    padding 0 20px
    float right
    color #777
    &.indent
      margin-right 30px

    +for_breakpoint(small)
      float none
      display inline-block

/* wrap-social */
.wrap-social
  display inline-block
  width 100%
  text-align center

.social-list
  list-style none
  margin 9px 200px 0 0
  padding 0
  float right
  +for_breakpoint(medium)
    margin-right 100px

  &.mobile
    display none
    margin 5px

  +for_breakpoint(small)
    &.desktop
      display none

    &.mobile
      float none
      display inline-block

  li
    float left
    margin-left 8px
    a
      color $color-primary
      font-size 25px
      line-height 1.2
      display inline-block

  .ico-plane,
  .yellow-box
    background $color-primary
    border none
    color #fff
    font-size 15px
    margin 5px 0
    border-radius (4px)
    cursor pointer
    outline none
    width 22px
    height 22px
    padding 0

    path
      fill white

  .yellow-box
    text-align center
    line-height 22px

    &.diff
      font-size 12px
      line-height 17px
      i
        position relative
        top -1px

  .ico-plane
    svg
      position relative
      left: -1px
      top: 1px



