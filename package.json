{
  "name": "GapminderToolsPage",
  "version": "0.8.3",
  "description": "Gapminder Tools Page",
  "repository": {
    "type": "git",
    "url": "http://gapminder.org/tools"
  },
  "license": "GPL-3.0",
  "author": "Arthur Camara",
  "scripts": {
    "postinstall": ".config/tools/choose_vizabi_version.js",
    "local:build": "NODE_ENV=local webpack --progress --color",
    "local": "npm run local:build && npm run serve",
    "local:hot": "NODE_ENV=local webpack-dev-server --inline --hot --progress --color",
    "dev:warning": "echo \"\\033[0;31mBEWARE!!! This environment you use only on your's own responsibility\\033[0m\n\"",
    "dev:build": "NODE_ENV=development webpack --progress --color",
    "dev": "npm run dev:build && npm run dev:warning && npm run serve",
    "dev:forever": "npm run dev:build && npm run serve-forever",
    "dev:docker": "npm run dev:warning && sh ./docker_run.sh",
    "stage:build": "NODE_ENV=stage webpack --progress --color --optimize-minimize --optimize-dedupe --optimize-occurence-order",
    "stage": "npm run stage:build && npm run serve",
    "stage:forever": "npm run stage:build && npm run serve-forever",
    "prod:build": "NODE_ENV=production webpack -p --progress --color --optimize-minimize --optimize-dedupe --optimize-occurence-order",
    "prod": "npm run prod:build && npm run serve",
    "prod:forever": "npm run prod:build && npm run serve-forever",
    "serve": "ws --directory ./client/dist --spa ./index.html --port ${PORT:=3001}",
    "serve-forever": "forever start -l forever.log -o logs/out.log -e logs/error.log -a -p logs --minUptime 1000 --spinSleepTime 1000 ./node_modules/.bin/ws --directory ./client/dist --spa ./index.html --port ${PORT:=3001}",
    "start": "npm run dev",
    "lint:eslint": "./node_modules/.bin/eslint --ext js --fix . .config",
    "pretest": "npm run lint:eslint",
    "bstack-tunnel": ".config/tools/bstack-local.js",
    "update-webdriver": "./node_modules/protractor/bin/webdriver-manager update",
    "selenium-server-standalone": "./node_modules/protractor/bin/webdriver-manager start",
    "pree2e:local": "npm run update-webdriver && npm run selenium-server-standalone",
    "e2e:bstack": ".config/tools/wait4tunnel.js && ./node_modules/.bin/protractor ./.config/protractor-browserstack.conf.js",
    "e2e:local": "./node_modules/.bin/protractor ./.config/protractor-local.conf.js"
  },
  "devDependencies": {
    "browserstack-wrapper": "1.0.0",
    "browserstacktunnel-wrapper": "1.4.2",
    "clean-webpack-plugin": "0.1.3",
    "compression-webpack-plugin": "0.2.0",
    "css-loader": "0.20.2",
    "eslint": "2.10.2",
    "eslint-config-valorsoft": "0.0.13",
    "extract-text-webpack-plugin": "0.8.2",
    "file-loader": "0.8.4",
    "html-loader": "0.3.0",
    "html-webpack-plugin": "1.6.1",
    "image-webpack-loader": "1.6.2",
    "imagemin": "3.2.1",
    "imports-loader": "valorkin/imports-loader",
    "jasmine": "2.4.1",
    "jasmine-spec-reporter": "2.4.0",
    "json-loader": "0.5.4",
    "protractor": "3.1.1",
    "shelljs": "0.6.0",
    "style-loader": "0.13.0",
    "stylus": "0.54.2",
    "stylus-loader": "2.0.0",
    "url-loader": "0.5.6",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.12.1"
  },
  "dependencies": {
    "URLON": "1.0.1",
    "angular": "1.4.7",
    "angular-route": "1.4.7",
    "angular-touch": "1.4.7",
    "bluebird": "3.3.5",
    "d3": "3.5.6",
    "local-web-server": "1.2.1",
    "lodash": "3.10.1",
    "vizabi": "0.15.1-0"
  }
}
